.container { padding: 16px; }
.header { margin-bottom: 16px; }
.title { font-size: 18px; font-weight: 600; }
.subtitle { color: #666; margin-top: 4px; }
.search-box { background: #fff; padding: 12px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.06); }
.code-input { border: 1px solid #eee; padding: 10px; border-radius: 6px; }
.actions { display: flex; gap: 12px; margin-top: 12px; }
.btn { flex: 1; border-radius: 6px; }
.loading { margin-top: 12px; color: #888; }
.error { margin-top: 12px; color: #e24; }
.result { margin-top: 16px; }
.result-type { font-size: 16px; font-weight: 500; margin-bottom: 8px; }
.card { background: #fff; padding: 12px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.06); }
.row { display: flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px dashed #f0f0f0; }
.row:last-child { border-bottom: none; }
.label { color: #666; }
.value { font-weight: 500; }
.hint { margin-top: 16px; color: #999; }
.code { font-family: monospace; background: #f5f5f5; padding: 2px 4px; border-radius: 4px; }