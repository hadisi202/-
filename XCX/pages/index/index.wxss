/* 板件查询系统样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 搜索区域 */
.search-section {
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  background: #ffffff;
  border-radius: 50rpx;
  padding: 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 25rpx 30rpx;
  font-size: 32rpx;
  border: none;
  background: transparent;
}

.search-btn {
  background: linear-gradient(45deg, #2196F3, #21CBF3);
  color: #ffffff;
  border: none;
  border-radius: 40rpx;
  padding: 25rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  min-width: 120rpx;
}

.search-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

/* 结果区域 */
.result-section {
  margin-bottom: 40rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.result-header {
  background: linear-gradient(45deg, #4CAF50, #45a049);
  padding: 30rpx;
  color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
}

.result-code {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.result-content {
  padding: 30rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666666;
  min-width: 180rpx;
  font-weight: 500;
}

.value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.value.highlight {
  color: #2196F3;
  font-weight: bold;
  background: rgba(33, 150, 243, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.value.material {
  font-size: 26rpx;
  line-height: 1.4;
  color: #555555;
  word-break: break-all;
  background: rgba(76, 175, 80, 0.05);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #4CAF50;
}

/* 信息分组 */
.info-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.info-section:first-child {
  margin-top: 0;
  padding-top: 0;
  border-top: none;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #2196F3;
}

/* 无结果提示 */
.no-result {
  text-align: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.no-result-text {
  display: block;
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.no-result-tip {
  display: block;
  font-size: 24rpx;
  color: #cccccc;
}

/* 加载状态 */
.loading {
  text-align: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 32rpx;
  color: #2196F3;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
  
  .search-input {
    font-size: 28rpx;
  }
  
  .search-btn {
    font-size: 24rpx;
    padding: 20rpx 30rpx;
  }
  /* 扫码按钮与查询按钮同形同尺寸（绿色） */
  .scan-btn {
    background: linear-gradient(45deg, #4CAF50, #66bb6a);
    color: #ffffff;
    border: none;
    border-radius: 40rpx;
    padding: 25rpx 40rpx;
    font-size: 28rpx;
    font-weight: bold;
    min-width: 120rpx;
    margin-left: 12rpx;
  }
  
  /* 隐形诊断按钮：固定左上角，尺寸与查询按钮一致，完全透明 */
  .diag-btn {
    position: fixed;
    top: 0;
    left: 0;
    padding: 25rpx 40rpx;
    border-radius: 40rpx;
    min-width: 120rpx;
    background: transparent;
    border: none;
    opacity: 0;
    z-index: 1000;
  }
  
  /* 行内序号徽标（包裹/托盘“第X个”） */
  .badge {
    display: inline-block;
    margin-left: 12rpx;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    line-height: 1;
  }
  .badge.green {
    background: rgba(76, 175, 80, 0.12);
    color: #2e7d32;
    border: 2rpx solid rgba(76, 175, 80, 0.35);
  }
  .badge.muted {
    background: #f1f1f1;
    color: #999;
  }
  /* 让徽标不占据整行的弹性空间 */
  .value.badge {
    flex: none;
  }
  .list {
    margin-top: 16rpx;
  }
  .list-item {
    padding: 12rpx 0;
    border-top: 1px solid #eee;
  }
}

/* 卡片化列表样式（顶层） */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.card-header {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.chip {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  background: #f5f7fb;
  color: #333;
  font-size: 26rpx;
}
.chip.primary {
  background: #e3f2fd;
  color: #1976d2;
}
.card-body {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
}
.grid.grid-2 {
  grid-template-columns: 1fr 1fr;
}
.field .label {
  color: #666;
  font-size: 26rpx;
}
.field .value {
  color: #333;
  font-size: 28rpx;
}
@media (max-width: 750rpx) {
  .grid.grid-2 { grid-template-columns: 1fr; }
}