/* pages/docs/docs.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 统计区域 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.action-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
  font-size: 32rpx;
}

.action-icon.create {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.action-icon.import {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.action-icon.scan {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.action-icon.template {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 搜索和筛选区域 */
.search-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.search-bar {
  position: relative;
  margin-bottom: 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 50rpx 0 30rpx;
  font-size: 28rpx;
  border: none;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.filter-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-right: 15rpx;
  background: #f8f9fa;
  color: #666;
  font-size: 26rpx;
  transition: all 0.3s;
}

.filter-tab:last-child {
  margin-right: 0;
}

.filter-tab.active {
  background: #007aff;
  color: white;
}

.sort-options {
  display: flex;
  flex-wrap: wrap;
}

.sort-item {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  color: #666;
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s;
}

.sort-item.active {
  background: #007aff;
  color: white;
}

/* 文档列表 */
.docs-list {
  padding: 0 20rpx;
}

.doc-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

.doc-item:active {
  transform: scale(0.98);
}

.doc-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.doc-icon.text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.doc-icon.markdown {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.doc-icon.table {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.icon-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.doc-content {
  flex: 1;
  min-width: 0;
}

.doc-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.doc-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.doc-tags {
  margin-bottom: 15rpx;
}

.doc-tag {
  display: inline-block;
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
}

.doc-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.doc-time {
  margin-right: 20rpx;
}

.doc-size {
  margin-right: 20rpx;
}

.doc-author {
  margin-right: 20rpx;
}

.doc-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.status-indicator {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.status-indicator.shared {
  background: #e8f5e8;
  color: #4caf50;
}

.status-indicator.favorite {
  background: #fff3e0;
  color: #ff9800;
}

.status-indicator.favorite.active {
  background: #ff9800;
  color: white;
}

.status-indicator.sync {
  background: #e3f2fd;
  color: #2196f3;
}

.status-indicator.sync.syncing {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.doc-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.action-btn:active {
  background: #e0e0e0;
}

.action-icon {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-action {
  color: #007aff;
  font-size: 28rpx;
  padding: 20rpx;
  border: 2rpx solid #007aff;
  border-radius: 25rpx;
  display: inline-block;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.fab-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

/* 表单元素 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-required {
  color: #ff4757;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  border-color: #007aff;
  background: white;
}

.textarea {
  height: 150rpx;
  padding: 20rpx;
  resize: none;
}

.type-selector {
  display: flex;
  gap: 15rpx;
}

.type-option {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-option.active {
  border-color: #007aff;
  background: #e3f2fd;
}

.type-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.tag-input-container {
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  background: #f8f9fa;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  background: #007aff;
  color: white;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.tag-input-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.tag-input {
  flex: 1;
  height: 60rpx;
  background: white;
  border-radius: 10rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  border: 2rpx solid #e0e0e0;
}

.tag-add-btn {
  height: 60rpx;
  padding: 0 20rpx;
  background: #007aff;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.share-options {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.permission-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.permission-label {
  font-size: 26rpx;
  color: #666;
}

.picker-input {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  min-width: 200rpx;
}

.picker-text {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.picker-icon {
  font-size: 24rpx;
  color: #999;
}

/* 操作表单 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.action-sheet-content {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-height: 70vh;
  overflow: hidden;
}

.action-sheet-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.action-sheet-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-sheet-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.action-list {
  padding: 0;
}

.action-list .action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: all 0.3s;
}

.action-list .action-item:active {
  background: #f8f9fa;
}

.action-list .action-item.danger {
  color: #ff4757;
}

.action-list .action-icon {
  width: 50rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.action-list .action-text {
  font-size: 30rpx;
  flex: 1;
}

.action-cancel {
  padding: 30rpx;
  text-align: center;
  background: #f8f9fa;
  color: #666;
  font-size: 30rpx;
  margin-top: 10rpx;
}

/* 模板网格 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.template-item {
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.template-item:active {
  border-color: #007aff;
  background: #e3f2fd;
}

.template-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
  font-size: 40rpx;
}

.template-icon.text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.template-icon.markdown {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.template-icon.table {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.template-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.template-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 编辑器模态框 */
.editor-modal {
  padding: 0;
  z-index: 1001;
}

.editor-content {
  background: white;
  width: 95%;
  height: 85%;
  max-width: none;
  max-height: none;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
}

.editor-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
}

.editor-title-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.editor-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.editor-status {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.save-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  color: #666;
}

.save-status.saved {
  background: #e8f5e8;
  color: #4caf50;
}

.save-status.saving {
  background: #fff3cd;
  color: #856404;
}

.sync-time {
  font-size: 22rpx;
  color: #999;
}

.editor-actions {
  display: flex;
  gap: 20rpx;
}

.editor-action {
  font-size: 40rpx;
  padding: 10rpx;
  cursor: pointer;
  transition: transform 0.2s;
  border-radius: 8rpx;
}

.editor-action:hover {
  transform: scale(1.1);
  background: rgba(0, 0, 0, 0.05);
}

/* 协同编辑工具栏 */
.collaborative-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.online-users {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.toolbar-label {
  font-size: 26rpx;
  font-weight: 500;
}

.user-avatars {
  display: flex;
  gap: 10rpx;
}

.user-avatar {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.user-avatar.current-user .avatar-img {
  border: 3rpx solid #ffd700;
}

.avatar-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.user-name {
  font-size: 20rpx;
  text-align: center;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.collaborative-status {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-indicator.online {
  color: #4caf50;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

.editor-body {
  flex: 1;
  padding: 30rpx;
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
  padding-bottom: 120rpx;
}

.editor-textarea {
  width: 100%;
  min-height: 400rpx;
  border: none;
  outline: none;
  font-size: 32rpx;
  line-height: 1.6;
  resize: none;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 编辑历史样式 */
.edit-history-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-history-content {
  background: white;
  border-radius: 12px;
  width: 90%;
  max-width: 500px;
  max-height: 70%;
  display: flex;
  flex-direction: column;
}

.edit-history-header {
  padding: 20px;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edit-history-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.edit-history-close {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 20px;
}

.edit-history-body {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
}

.edit-history-modal {
  width: 90%;
  max-height: 80%;
}

.edit-history-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.history-item {
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s;
}

.history-item:hover {
  background-color: #f8f9fa;
}

.history-item:last-child {
  border-bottom: none;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.action-type {
  font-size: 26rpx;
  color: #666;
}

.history-time {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.history-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-left: 20rpx;
}

.change-description {
  font-size: 26rpx;
  color: #555;
}

.content-length {
  font-size: 24rpx;
  color: #888;
}

.empty-history {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.history-user {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.history-action {
  font-size: 13px;
  color: #666;
  background: #f8f9fa;
  padding: 6px 10px;
  border-radius: 4px;
  border-left: 3px solid #007aff;
}

.edit-history-empty {
  text-align: center;
  color: #999;
  padding: 40px 20px;
}

.edit-history-footer {
  padding: 20px;
  border-top: 1px solid #eee;
  text-align: center;
}

.edit-history-footer .btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 10px 24px;
  border-radius: 6px;
  font-size: 14px;
}

/* 表格查看器样式 */
.table-viewer {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}

.table-header {
  padding: 16px;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.table-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.table-info {
  font-size: 12px;
  color: #666;
  background: #f0f7ff;
  padding: 4px 8px;
  border-radius: 4px;
}

.table-container {
  flex: 1;
  overflow: auto;
}

.table-content {
  min-width: 100%;
  border-collapse: collapse;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #eee;
}

.table-header-row {
  background: #f8f9fa;
  position: sticky;
  top: 0;
  z-index: 10;
}

.table-cell {
  flex: 1;
  min-width: 120px;
  padding: 12px 16px;
  border-right: 1px solid #eee;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #333;
}

.table-cell.editable {
  background: #f8f9fa;
  cursor: pointer;
}

.cell-input {
  width: 100%;
  height: 100%;
  border: none;
  background: transparent;
  text-align: center;
  font-size: 14px;
  outline: none;
}

.cell-input:focus {
  background: white;
  border: 1rpx solid #007bff;
  border-radius: 4rpx;
}

.table-header-cell {
  font-weight: 600;
  background: #f8f9fa;
  color: #666;
}

.table-cell:last-child {
  border-right: none;
}

.table-footer {
  padding: 12px 16px;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fafafa;
}

.table-actions {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.table-stats {
  font-size: 12px;
  color: #6c757d;
}

.edit-mode-btn {
  font-size: 12px;
  color: #007bff;
  padding: 8rpx 16rpx;
  background: #e7f3ff;
  border-radius: 4rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.edit-mode-btn:active {
  background: #cce7ff;
  transform: scale(0.98);
}

.table-action-btn {
  font-size: 12px;
  color: #28a745;
  padding: 8rpx 16rpx;
  background: #e8f5e8;
  border-radius: 4rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  user-select: none;
  -webkit-user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.table-action-btn:active {
  background: #d4edda;
  transform: scale(0.98);
}

.table-edit-mode {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  z-index: 20;
}

.editor-footer {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  bottom: 0;
  z-index: 10;
  min-height: 80rpx;
}

.editor-status {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.save-status.saved {
  color: #4caf50;
}

.save-status.saving {
  color: #ff9800;
}

.save-status.error {
  color: #f44336;
}

.editor-tools {
  display: flex;
  gap: 15rpx;
}

.tool-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.tool-btn:active {
  background: #f0f0f0;
}

.complete-btn {
  padding: 12rpx 32rpx;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-left: auto;
  cursor: pointer;
}

.complete-btn:active {
  background: #06ad56;
}

/* 富文本编辑器样式 */
.rich-editor-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.rich-toolbar {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
  border-radius: 12rpx 12rpx 0 0;
}

.toolbar-group {
  display: flex;
  gap: 8rpx;
  padding: 0 10rpx;
  border-right: 1rpx solid #e0e0e0;
}

.toolbar-group:last-child {
  border-right: none;
}

.toolbar-btn {
  min-width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  cursor: pointer;
  transition: all 0.2s;
}

.toolbar-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.toolbar-btn.active {
  background: #007aff;
  color: white;
  border-color: #007aff;
}

.rich-editor-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
}

.editor-textarea.rich-text {
  flex: 1;
  min-height: 400rpx;
  padding: 30rpx;
  border: none;
  outline: none;
  font-size: 32rpx;
  line-height: 1.8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: white;
}

.format-preview {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  padding: 30rpx;
  overflow-y: auto;
}

.preview-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
}

.editor-mode-switch {
  display: flex;
  background: #f8f9fa;
  border-top: 1rpx solid #e0e0e0;
  border-radius: 0 0 12rpx 12rpx;
}

.mode-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.2s;
}

.mode-btn.active {
  background: #007aff;
  color: white;
  font-weight: 500;
}

.mode-btn:active {
  background: #f0f0f0;
}

.mode-btn.active:active {
  background: #0056cc;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-grid {
    flex-wrap: wrap;
  }
  
  .stat-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .quick-actions {
    flex-wrap: wrap;
  }
  
  .action-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .template-grid {
    grid-template-columns: 1fr;
  }
}