/* pages/meeting/meeting.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 统计区域 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.action-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
  font-size: 32rpx;
}

.action-icon.create {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.action-icon.join {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.action-icon.quick {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.action-icon.template {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 搜索和筛选区域 */
.search-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.search-bar {
  position: relative;
  margin-bottom: 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 50rpx 0 30rpx;
  font-size: 28rpx;
  border: none;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.filter-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-right: 15rpx;
  background: #f8f9fa;
  color: #666;
  font-size: 26rpx;
  transition: all 0.3s;
}

.filter-tab:last-child {
  margin-right: 0;
}

.filter-tab.active {
  background: #007aff;
  color: white;
}

.sort-options {
  display: flex;
  flex-wrap: wrap;
}

.sort-item {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  color: #666;
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s;
}

.sort-item.active {
  background: #007aff;
  color: white;
}

/* 会议列表 */
.meetings-list {
  padding: 0 20rpx;
}

.meeting-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
  position: relative;
}

.meeting-item:active {
  transform: scale(0.98);
}

.meeting-status {
  width: 8rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  border-radius: 20rpx 0 0 20rpx;
}

.meeting-status.upcoming {
  background: #007aff;
}

.meeting-status.ongoing {
  background: #34c759;
}

.meeting-status.completed {
  background: #8e8e93;
}

.meeting-status.cancelled {
  background: #ff3b30;
}

.status-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  position: absolute;
  top: 30rpx;
  left: -6rpx;
}

.meeting-status.upcoming .status-dot {
  background: #007aff;
  animation: pulse 2s infinite;
}

.meeting-status.ongoing .status-dot {
  background: #34c759;
  animation: pulse 1s infinite;
}

.meeting-status.completed .status-dot {
  background: #8e8e93;
}

.meeting-status.cancelled .status-dot {
  background: #ff3b30;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.meeting-content {
  flex: 1;
  margin-left: 20rpx;
  min-width: 0;
}

.meeting-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meeting-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meeting-time {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.time-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.time-text {
  margin-right: 15rpx;
}

.duration-text {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
}

.meeting-location {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.location-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.location-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meeting-attendees {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.attendees-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.attendees-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meeting-tags {
  margin-bottom: 10rpx;
}

.meeting-tag {
  display: inline-block;
  background: #e8f5e8;
  color: #4caf50;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
}

.meeting-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.quick-action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s;
}

.quick-action-btn.join {
  background: #34c759;
  color: white;
}

.quick-action-btn.notes {
  background: #007aff;
  color: white;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.action-btn:active {
  background: #e0e0e0;
}

.action-icon {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-action {
  color: #007aff;
  font-size: 28rpx;
  padding: 20rpx;
  border: 2rpx solid #007aff;
  border-radius: 25rpx;
  display: inline-block;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.fab-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

/* 表单元素 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-required {
  color: #ff4757;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  border-color: #007aff;
  background: white;
}

.textarea {
  height: 150rpx;
  padding: 20rpx;
  resize: none;
}

.datetime-picker {
  display: flex;
  gap: 15rpx;
}

.picker-input {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.picker-input:active {
  border-color: #007aff;
  background: white;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-icon {
  font-size: 24rpx;
  color: #999;
}

.type-selector {
  display: flex;
  gap: 15rpx;
}

.type-option {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-option.active {
  border-color: #007aff;
  background: #e3f2fd;
}

.type-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.attendees-input-container {
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  background: #f8f9fa;
}

.selected-attendees {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.selected-attendee {
  display: flex;
  align-items: center;
  background: #007aff;
  color: white;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.attendee-remove {
  margin-left: 10rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.attendee-input-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.attendee-input {
  flex: 1;
  height: 60rpx;
  background: white;
  border-radius: 10rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  border: 2rpx solid #e0e0e0;
}

.attendee-add-btn {
  height: 60rpx;
  padding: 0 20rpx;
  background: #007aff;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
}

.reminder-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.reminder-option {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  color: #666;
  font-size: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.reminder-option.active {
  border-color: #007aff;
  background: #e3f2fd;
  color: #007aff;
}

.tag-input-container {
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  background: #f8f9fa;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  background: #34c759;
  color: white;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 28rpx;
  cursor: pointer;
}

.tag-input-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.tag-input {
  flex: 1;
  height: 60rpx;
  background: white;
  border-radius: 10rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  border: 2rpx solid #e0e0e0;
}

.tag-add-btn {
  height: 60rpx;
  padding: 0 20rpx;
  background: #34c759;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  border: none;
}

/* 操作表单 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.action-sheet-content {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-height: 70vh;
  overflow: hidden;
}

.action-sheet-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.action-sheet-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-sheet-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.action-list {
  padding: 0;
}

.action-list .action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f9fa;
  transition: all 0.3s;
}

.action-list .action-item:active {
  background: #f8f9fa;
}

.action-list .action-item.danger {
  color: #ff4757;
}

.action-list .action-icon {
  width: 50rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.action-list .action-text {
  font-size: 30rpx;
  flex: 1;
}

.action-cancel {
  padding: 30rpx;
  text-align: center;
  background: #f8f9fa;
  color: #666;
  font-size: 30rpx;
  margin-top: 10rpx;
}

/* 模板网格 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.template-item {
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.template-item:active {
  border-color: #007aff;
  background: #e3f2fd;
}

.template-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
  font-size: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.template-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.template-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.template-duration {
  font-size: 22rpx;
  color: #007aff;
  background: #e3f2fd;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  display: inline-block;
}

/* 会议纪要模态框 */
.notes-modal {
  padding: 0;
}

.notes-content {
  background: white;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.notes-header {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
}

.notes-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notes-actions {
  display: flex;
  gap: 20rpx;
}

.notes-action {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.notes-body {
  flex: 1;
  padding: 30rpx;
}

.notes-textarea {
  width: 100%;
  height: 100%;
  border: none;
  font-size: 28rpx;
  line-height: 1.6;
  resize: none;
  background: transparent;
}

.notes-footer {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.notes-status {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.save-status.saved {
  color: #4caf50;
}

.save-status.saving {
  color: #ff9800;
}

.save-status.error {
  color: #f44336;
}

.notes-tools {
  display: flex;
  gap: 15rpx;
}

.tool-btn {
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  background: white;
  color: #666;
  font-size: 24rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.tool-btn:active {
  background: #f0f0f0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-grid {
    flex-wrap: wrap;
  }
  
  .stat-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .quick-actions {
    flex-wrap: wrap;
  }
  
  .action-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .template-grid {
    grid-template-columns: 1fr;
  }
  
  .datetime-picker {
    flex-direction: column;
  }
}