/* pages/todo/todo.wxss */
.container {
  padding: 0 0 120rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 统计区域 */
.stats-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 10rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 搜索和筛选区域 */
.search-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  position: relative;
  margin-bottom: 40rpx;
}

.search-input {
  width: 100%;
  padding: 28rpx 80rpx 0rpx 24rpx;
  border: 10rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  line-height: 1.4;
  height: 84rpx;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
  pointer-events: none;
  z-index: 1;
}

.filter-tabs {
  display: flex;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 8rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #007aff;
  color: white;
  font-weight: 500;
}

.sort-options {
  display: flex;
  gap: 20rpx;
}

.sort-item {
  padding: 12rpx 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.sort-item.active {
  border-color: #007aff;
  color: #007aff;
  background: rgba(0, 122, 255, 0.1);
}

/* 待办列表 */
.todo-list {
  padding: 0 20rpx;
}

.todo-item {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s ease;
}

.todo-item:active {
  transform: scale(0.98);
}

.todo-item.completed {
  opacity: 0.7;
}

/* 优先级指示器 */
.priority-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  border-radius: 0 3rpx 3rpx 0;
}

.priority-indicator.high {
  background: #ff3b30;
}

.priority-indicator.medium {
  background: #ff9500;
}

.priority-indicator.low {
  background: #34c759;
}

/* 复选框 */
.todo-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  margin-top: 4rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.todo-checkbox.checked {
  background: #34c759;
  border-color: #34c759;
}

.checkbox-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 待办内容 */
.todo-content {
  flex: 1;
  min-width: 0;
}

.todo-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.todo-title.completed {
  text-decoration: line-through;
  color: #999;
}

.todo-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.todo-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.todo-tag {
  font-size: 22rpx;
  color: #007aff;
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 122, 255, 0.2);
}

.todo-meta {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.todo-time {
  font-size: 24rpx;
  color: #ff9500;
  font-weight: 500;
}

.todo-created {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.todo-actions {
  margin-left: 20rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #e9ecef;
  transform: scale(0.9);
}

.action-icon {
  font-size: 32rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.empty-action {
  color: #007aff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: 1rpx solid #007aff;
  border-radius: 25rpx;
  display: inline-block;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 122, 255, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
  font-weight: 300;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
}

/* 表单样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-required {
  color: #ff3b30;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.textarea {
  min-height: 120rpx;
  resize: vertical;
}

/* 优先级选择器 */
.priority-selector {
  display: flex;
  gap: 20rpx;
}

.priority-option {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  flex: 1;
  justify-content: center;
}

.priority-option.active {
  border-color: #007aff;
  background: rgba(0, 122, 255, 0.1);
}

.priority-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.priority-dot.high {
  background: #ff3b30;
}

.priority-dot.medium {
  background: #ff9500;
}

.priority-dot.low {
  background: #34c759;
}

/* 选择器样式 */
.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-icon {
  font-size: 32rpx;
  color: #666;
}

/* 标签输入 */
.tag-input-container {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background: white;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  background: #007aff;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.tag-remove {
  margin-left: 8rpx;
  font-size: 20rpx;
  width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.tag-input-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.tag-input {
  flex: 1;
  padding: 16rpx;
  border: none;
  font-size: 26rpx;
  background: transparent;
}

.tag-add-btn {
  padding: 12rpx 24rpx;
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 开关行 */
.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.reminder-options {
  margin-top: 16rpx;
}

/* 操作表单 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.action-sheet-content {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  animation: actionSheetSlideIn 0.3s ease;
}

@keyframes actionSheetSlideIn {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.action-sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-sheet-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-sheet-close {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

.action-list {
  padding: 20rpx 0;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  transition: background 0.2s ease;
}

.action-item:active {
  background: #f8f9fa;
}

.action-item.danger {
  color: #ff3b30;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.action-text {
  font-size: 30rpx;
  flex: 1;
}

.action-cancel {
  padding: 30rpx;
  text-align: center;
  border-top: 10rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #666;
}

/* 详情样式 */
.detail-section {
  appearance: 20rpx;
}

.detail-item {
  margin-bottom: 20rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.detail-value.status {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.detail-value.status.completed {
  background: #d4edda;
  color: #155724;
}

.detail-value.status.pending {
  background: #fff3cd;
  color: #856404;
}

.detail-value.priority {
  display: flex;
  align-items: center;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.detail-tag {
  font-size: 22rpx;
  color: #007aff;
  background: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 122, 255, 0.2);
}

/* 响应式设计 */
@media (max-width: 400px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .priority-selector {
    flex-direction: column;
  }
  
  .sort-options {
    flex-wrap: wrap;
  }
}