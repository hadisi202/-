  opacity: 0.6;
  background: rgba(255, 107, 107, 0.5);
}

.modal-btn .loading-spinner {
  width: 25rpx;
  height: 25rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-left: 15rpx;
}

/* 用户名检测状态样式 */
.username-check-status {
  margin-top: 10rpx;
  padding-left: 20rpx;
}

.check-message {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.check-message.checking {
  color: #999;
}

.check-message.available {
  color: #4CAF50;
}

.check-message.available::before {
  content: '✓';
  margin-right: 8rpx;
  font-weight: bold;
}

.check-message.unavailable {
  color: #f44336;
}

.check-message.unavailable::before {
  content: '✗';
  margin-right: 8rpx;
  font-weight: bold;
}

/* 响应式优化 */
@media (max-height: 700px) {
  .modal-content {
    max-height: 90vh;
    overflow-y: auto;
  }
  
  .modal-body {
    padding: 30rpx;
  }
  
  .input-wrapper {
    margin-bottom: 25rpx;
  }
  
  .modal-input {
    height: 80rpx;
    font-size: 28rpx;
  }
}

@media screen and (max-width: 320px) {
  .modal-content {
    width: 90%;
    padding: 30rpx;
  }
  
  .modal-input {
    font-size: 28rpx;
  }
  
  .modal-btn {
    height: 80rpx;
    font-size: 28rpx;
  }
  
  .check-message {
    font-size: 22rpx;
  }
}