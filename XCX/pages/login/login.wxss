/* 登录容器 */
.login-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #0c0c0c 0%, #1a1a2e 50%, #16213e 100%);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 动态星空背景 */
.starry-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.star {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 50%;
  animation: twinkle 3s infinite;
}

.star:nth-child(2n) {
  width: 6rpx;
  height: 6rpx;
  background: #87ceeb;
}

.star:nth-child(3n) {
  width: 8rpx;
  height: 8rpx;
  background: #ffd700;
}

@keyframes twinkle {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 登录内容 */
.login-content {
  position: relative;
  z-index: 2;
  width: 90%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 15rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  line-height: 1.2;
  letter-spacing: 2rpx;
  font-family: inherit;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
  line-height: 1.4;
  letter-spacing: 1rpx;
  font-family: inherit;
}

/* 登录表单 */
.login-form {
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-wrapper {
  position: relative;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #4facfe;
  box-shadow: 0 0 20rpx rgba(79, 172, 254, 0.3);
}

.login-input {
  width: 100%;
  height: 100rpx;
  padding: 0 60rpx 0 30rpx;
  font-size: 32rpx;
  color: #fff;
  background: transparent;
  border: none;
  outline: none;
  line-height: 1.4;
  font-family: inherit;
  box-sizing: border-box;
}

.login-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
  font-family: inherit;
}

.input-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  color: rgba(20, 24, 19, 0.753);
  cursor: pointer;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 25rpx;
  border: none;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(20, 48, 65, 0.3);
  transition: all 0.3s ease;
}

.login-btn:not([disabled]):active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(79, 172, 254, 0.3);
}

.login-btn[disabled] {
  opacity: 0.6;
  background: rgba(255, 255, 255, 0.2);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
  font-family: inherit;
}

.btn-icon {
  margin-left: 10rpx;
  font-size: 28rpx;
  transition: transform 0.3s ease;
}

.login-btn:not([disabled]):hover .btn-icon {
  transform: translateX(5rpx);
}

.loading-spinner {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-left: 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 游客按钮 */
.guest-btn {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  line-height: 1.2;
  font-family: inherit;
  padding: 10rpx;
  box-sizing: border-box;
}

.guest-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

.guest-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 8rpx;
  line-height: 1;
  font-family: inherit;
}

/* 登录选项 */
.login-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  text-decoration: underline;
  cursor: pointer;
  transition: color 0.3s ease;
  line-height: 1.4;
  font-family: inherit;
  padding: 10rpx 5rpx;
}

.option-text:active {
  color: #4facfe;
}

/* 版权信息 */
.copyright {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  line-height: 1.4;
  font-family: inherit;
  white-space: nowrap;
}

/* 响应式设计 */
@media (max-height: 600px) {
  .login-content {
    padding: 60rpx 40rpx;
  }
  
  .logo-section {
    margin-bottom: 60rpx;
  }
  
  .logo-icon {
    font-size: 100rpx;
  }
  
  .app-title {
    font-size: 40rpx;
    line-height: 1.2;
  }
  
  .app-subtitle {
    font-size: 24rpx;
    line-height: 1.4;
  }
  
  .guest-btn {
    height: 90rpx;
  }
}

/* 修复字体显示问题 */
.login-content,
.login-content text,
.login-content input,
.login-content button,
.login-content view {
  font-family: inherit;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 确保文本不重叠 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.login-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  0% {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  font-family: inherit;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.modal-body {
  padding: 40rpx;
}

.modal-input {
  width: 100%;
  height: 90rpx;
  padding: 0 60rpx 0 30rpx;
  font-size: 30rpx;
  color: #333;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(79, 172, 254, 0.2);
  border-radius: 20rpx;
  outline: none;
  line-height: 1.4;
  font-family: inherit;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.modal-input:focus {
  border-color: #4facfe;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 15rpx rgba(79, 172, 254, 0.2);
}

.modal-input::placeholder {
  color: rgba(51, 51, 51, 0.6);
  font-family: inherit;
}

.input-wrapper {
  position: relative;
  margin-bottom: 30rpx;
}

.input-wrapper .input-icon {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: rgba(79, 172, 254, 0.7);
}

/* 验证码组件 */
.captcha-group {
  display: flex;
  gap: 20rpx;
  align-items: center;
  margin-bottom: 30rpx;
}

.captcha-input {
  flex: 1;
  margin-bottom: 0;
}

.captcha-display {
  width: 160rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 5rpx 15rpx rgba(79, 172, 254, 0.3);
}

.captcha-display:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(79, 172, 254, 0.3);
}

.captcha-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  font-family: inherit;
}

.captcha-refresh {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 5rpx;
  font-family: inherit;
}

/* 忘记密码提示 */
.forgot-tip {
  background: rgba(79, 172, 254, 0.1);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #4facfe;
}

.forgot-tip text {
  font-size: 26rpx;
  color: #4facfe;
  line-height: 1.5;
  font-family: inherit;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx;
}

