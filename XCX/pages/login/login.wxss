  height: 90rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  font-family: inherit;
  line-height: 1;
}

.register-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  box-shadow: 0 8rpx 25rpx rgba(79, 172, 254, 0.3);
}

.register-btn:not([disabled]):active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(79, 172, 254, 0.3);
}

.register-btn[disabled] {
  opacity: 0.6;
  background: rgba(79, 172, 254, 0.5);
}

.forgot-btn {
