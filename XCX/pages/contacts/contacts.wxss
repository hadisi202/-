/* pages/contacts/contacts.wxss */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 统计区域 */
.stats-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #007AFF;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 快速操作 */
.quick-actions {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}

.action-item {
  text-align: center;
  flex: 1;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
}

/* 搜索和筛选 */
.search-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  position: relative;
  margin-bottom: 30rpx;
}

.search-input {
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 20rpx 60rpx 20rpx 30rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.filter-tabs {
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.filter-tab {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #007AFF;
  color: white;
}

.sort-options {
  display: flex;
  justify-content: space-around;
}

.sort-option {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  border-bottom: 2rpx solid transparent;
  transition: all 0.3s;
}

.sort-option.active {
  color: #007AFF;
  border-bottom-color: #007AFF;
}

/* 分组列表 */
.groups-section {
  background: white;
  margin-bottom: 20rpx;
}

.group-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.group-item:last-child {
  border-bottom: none;
}

.group-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.group-info {
  flex: 1;
}

.group-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.group-count {
  font-size: 24rpx;
  color: #999;
}

.group-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 联系人列表 */
.contacts-section {
  position: relative;
}

.alphabet-index {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 10rpx 5rpx;
}

.alphabet-item {
  text-align: center;
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  color: #666;
  margin-bottom: 5rpx;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.alphabet-item.active {
  background: #007AFF;
  color: white;
}

.contacts-list {
  background: white;
  margin-bottom: 20rpx;
}

.alphabet-section {
  border-bottom: 1rpx solid #f0f0f0;
}

.alphabet-section:last-child {
  border-bottom: none;
}

.alphabet-header {
  background: #f8f8f8;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background-color: #f8f8f8;
}

.contact-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  background: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.contact-info {
  flex: 1;
  min-width: 0;
}

.contact-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: flex;
  align-items: center;
}

.favorite-icon {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.contact-detail {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contact-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.contact-tag {
  background: #e8f4ff;
  color: #007AFF;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.contact-actions {
  display: flex;
  gap: 20rpx;
}

.contact-phone,
.contact-message {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: all 0.3s;
}

.contact-phone:active,
.contact-message:active {
  background: #007AFF;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
  background: white;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-action {
  color: #007AFF;
  font-size: 28rpx;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 122, 255, 0.3);
  z-index: 100;
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 联系人表单 */
.contact-modal .modal-body {
  max-height: calc(85vh - 200rpx);
  min-height: 400rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.avatar-upload {
  text-align: center;
  margin-bottom: 30rpx;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f8f8f8;
  border: 2rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.avatar-icon {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: #999;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 35rpx;
}

.form-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  min-height: 80rpx;
  line-height: 1.4;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #007AFF;
  background: white;
}

.form-textarea {
  height: 150rpx;
  min-height: 150rpx;
  resize: none;
  padding: 25rpx 20rpx;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  background: #fafafa;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 28rpx;
  color: #999;
}

.form-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tags-input {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  background: #fafafa;
  min-height: 80rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: #e8f4ff;
  color: #007AFF;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #999;
}

.tag-input {
  flex: 1;
  min-width: 100rpx;
  border: none;
  background: transparent;
  font-size: 28rpx;
}

/* 操作选项 */
.options-modal {
  max-width: 400rpx;
}

.options-list {
  padding: 0;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background-color: #f8f8f8;
}

.option-item.danger {
  color: #ff4757;
}

.option-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.option-text {
  font-size: 28rpx;
}

/* 联系人详情 */
.detail-modal {
  max-width: 500rpx;
}

.detail-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.detail-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  overflow: hidden;
  background: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-avatar .avatar-text {
  font-size: 40rpx;
}

.detail-info {
  flex: 1;
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.detail-company {
  font-size: 26rpx;
  color: #666;
}

.detail-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-method {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.contact-method:last-child {
  border-bottom: none;
}

.method-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.method-info {
  flex: 1;
}

.method-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.method-value {
  font-size: 28rpx;
  color: #333;
}

.method-actions {
  display: flex;
  gap: 20rpx;
}

.method-action {
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #007AFF;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.detail-tag {
  background: #e8f4ff;
  color: #007AFF;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.detail-notes {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
}

/* 分组管理 */
.group-modal {
  max-width: 500rpx;
}

.add-group-section {
  margin-bottom: 30rpx;
}

.add-group-section .form-item {
  display: flex;
  gap: 20rpx;
  align-items: center;
  margin-bottom: 0;
}

.add-group-section .form-input {
  flex: 1;
}

.groups-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.groups-list .group-item {
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 0;
}

.group-actions {
  display: flex;
  gap: 20rpx;
}

.group-action {
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #007AFF;
}

.group-action.danger {
  color: #ff4757;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .stats-grid {
    flex-wrap: wrap;
  }
  
  .stat-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .quick-actions {
    flex-wrap: wrap;
  }
  
  .action-item {
    width: 50%;
    margin-bottom: 20rpx;
  }
  
  .modal-overlay {
    padding: 20rpx;
  }
  
  .contact-item {
    padding: 20rpx;
  }
  
  .contact-avatar {
    width: 60rpx;
    height: 60rpx;
  }
  
  .avatar-text {
    font-size: 24rpx;
  }
}