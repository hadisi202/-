/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-container {
  padding: 0 20rpx 40rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #007aff 0%, #5856d6 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(0, 122, 255, 0.3);
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

.btn-secondary {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.btn-secondary:active {
  background: #e9ecef;
}

.btn-success {
  background: linear-gradient(135deg, #34c759 0%, #30d158 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(52, 199, 89, 0.3);
}

.btn-warning {
  background: linear-gradient(135deg, #ff9500 0%, #ff8c00 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 149, 0, 0.3);
}

.btn-danger {
  background: linear-gradient(135deg, #ff3b30 0%, #ff2d92 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 59, 48, 0.3);
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.btn-large {
  padding: 28rpx 56rpx;
  font-size: 32rpx;
  border-radius: 16rpx;
}

.btn-block {
  width: 100%;
  display: flex;
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-required {
  color: #ff3b30;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.input-error {
  border-color: #ff3b30;
}

.input-error:focus {
  box-shadow: 0 0 0 4rpx rgba(255, 59, 48, 0.1);
}

.textarea {
  min-height: 120rpx;
  resize: vertical;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #007aff;
  display: inline-block;
}

/* 列表样式 */
.list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #f8f9fa;
}

.list-item-content {
  flex: 1;
  min-width: 0;
}

.list-item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.list-item-desc {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item-meta {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.list-item-action {
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* 图标样式 */
.icon {
  display: inline-block;
  font-size: 32rpx;
  line-height: 1;
}

.icon-small {
  font-size: 24rpx;
}

.icon-large {
  font-size: 48rpx;
}

.icon-primary {
  color: #007aff;
}

.icon-success {
  color: #34c759;
}

.icon-warning {
  color: #ff9500;
}

.icon-danger {
  color: #ff3b30;
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 1;
}

.badge-primary {
  background: #007aff;
  color: white;
}

.badge-success {
  background: #34c759;
  color: white;
}

.badge-warning {
  background: #ff9500;
  color: white;
}

.badge-danger {
  background: #ff3b30;
  color: white;
}

.badge-secondary {
  background: #8e8e93;
  color: white;
}

.badge-light {
  background: #f2f2f7;
  color: #333;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #666;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.empty-action {
  color: #007aff;
  font-size: 26rpx;
}

